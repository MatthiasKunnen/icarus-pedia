{
    "name": "icarus-pedia",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "vite build",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "dev": "vite dev",
        "lint": "eslint \"src/**/*.ts\" \"svelte.config.js\" \"tools/**/*.ts\" vite.config.ts",
        "preview": "vite preview",
        "run:tool": "TS_NODE_PROJECT=tools/tsconfig.json node --loader ts-node/esm",
        "run:tool:inspect": "TS_NODE_PROJECT=tools/tsconfig.json node --loader ts-node/esm --inspect-brk",
        "summarize-data": "yarn run run:tool tools/summarize/summarize-game-data.ts",
        "sync-icons": "yarn run run:tool tools/summarize/sync-icons.ts"
    },
    "devDependencies": {
        "@matthiaskunnen/eslint-config-typescript": "^6.0.0",
        "@matthiaskunnen/eslint-config-typescript-node": "^6.0.0",
        "@sveltejs/adapter-static": "^3.0.10",
        "@sveltejs/kit": "^2.49.3",
        "@sveltejs/vite-plugin-svelte": "^4.0.0",
        "@types/node": "^24.10.4",
        "eslint": "~8.39.0",
        "husky": "^1.3.1",
        "lint-staged": "^15.2.0",
        "sass-embedded": "^1.85.1",
        "svelte": "^5.46.1",
        "svelte-check": "^4.3.5",
        "ts-node": "^10.9.1",
        "tslib": "^2.8.1",
        "typescript": "~5.9.3",
        "vite": "^5.4.4"
    },
    "packageManager": "yarn@4.12.0",
    "engines": {
        "node": "^24.12.0",
        "yarn": "4.12.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
