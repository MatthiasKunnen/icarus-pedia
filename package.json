{
    "name": "icarus-pedia",
    "type": "module",
    "private": true,
    "scripts": {
        "lint:ts": "eslint \"tools/**/*.ts\"",
        "run:tool": "TS_NODE_PROJECT=tools/tsconfig.json node --loader ts-node/esm",
        "run:tool:inspect": "TS_NODE_PROJECT=tools/tsconfig.json node --loader ts-node/esm --inspect-brk"
    },
    "devDependencies": {
        "@matthiaskunnen/eslint-config-typescript": "^5.0.0",
        "@matthiaskunnen/eslint-config-typescript-node": "^5.0.0",
        "@types/node": "^20.10.0",
        "eslint": "~8.39.0",
        "husky": "^1.3.1",
        "lint-staged": "^15.2.0",
        "ts-node": "^10.9.1",
        "typescript": "~5.0.4"
    },
    "packageManager": "yarn@4.0.2",
    "engines": {
        "node": "^20.10.0",
        "yarn": "4.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
