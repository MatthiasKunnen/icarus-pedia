{
    "name": "icarus-pedia",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "vite build && yarn run run:tool tools/build/nginx.conf.ts > nginx.conf",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "dev": "vite dev",
        "lint": "eslint \"src/**/*.ts\" \"svelte.config.js\" \"tools/**/*.ts\" vite.config.ts",
        "preview": "vite preview",
        "run:tool": "TS_NODE_PROJECT=tools/tsconfig.json node --loader ts-node/esm",
        "run:tool:inspect": "TS_NODE_PROJECT=tools/tsconfig.json node --loader ts-node/esm --inspect-brk"
    },
    "devDependencies": {
        "@matthiaskunnen/eslint-config-typescript": "^6.0.0",
        "@matthiaskunnen/eslint-config-typescript-node": "^6.0.0",
        "@sveltejs/adapter-static": "^3.0.1",
        "@sveltejs/kit": "^2.1.0",
        "@sveltejs/vite-plugin-svelte": "^3.0.1",
        "@types/node": "^20.10.0",
        "eslint": "~8.39.0",
        "husky": "^1.3.1",
        "lint-staged": "^15.2.0",
        "svelte": "^4.2.8",
        "svelte-check": "^3.6.2",
        "ts-node": "^10.9.1",
        "tslib": "^2.4.1",
        "typescript": "~5.0.4",
        "vite": "^5.0.11"
    },
    "packageManager": "yarn@4.0.2",
    "engines": {
        "node": "^20.10.0",
        "yarn": "4.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
